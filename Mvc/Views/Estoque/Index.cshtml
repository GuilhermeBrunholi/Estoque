@model IEnumerable<Dominio.Entidades.Estoque>

<h2>Todos Estoques</h2>

<a href="/Estoque/Salvar" class="btn">Novo Estoque</a>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a href="/Produto/Index/@item.Id">@item.Nome</a></td>
                        <td>
                            <a href="/Estoque/Editar/@item.Id" class="btn">Editar</a>
                        </td>
                        <td>
                            <a href="/Estoque/Deletar/@item.Id" class="btn">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>