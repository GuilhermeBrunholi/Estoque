@model Dominio.Entidades.Categoria


<form class="form-horizontal" asp-action="Salvar" asp-controller="Categoria" method="POST">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h3 class="modal-title" id="exampleModalLabel">Editar Categoria</h3>
    </div>

    <div class="topo">
        <input type="hidden" class="form-control" asp-for="Id">
        <div class="form-group">
            <label class="col-md-2 control-label" for="Name">Nome</label>
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="Nome">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button class="btn btn-success">Salvar</button>
    </div>

</form>